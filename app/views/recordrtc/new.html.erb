<% content_for :page_header do %>
  Record Yourself!
<% end %>

<% content_for :panel_heading do %>
  <strong>Click "Start Recording" to begin</strong>
<% end %>

<div class="row">
  <div class="col-lg-6">
    <div class="embed-responsive embed-responsive-4by3">
      <video id="video-player" autoplay muted></video>
    </div>
  </div>

  <div class="col-lg-6">
    <button id="start-stop" class="btn btn-block btn-outline btn-danger"><i class="fa fa-circle"></i> Start Recording</button>

    <br />

    <div id="upload-form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input name="title" id="title" class="form-control" />
      </div>

      <div class="form-group">
        <label for="description">Description:</label>
        <textarea name="description" id="description" class="form-control"></textarea>
      </div>

      <input type="hidden" name="account_id" id="account_id" value="<%= @account.id %>" />

      <button id="upload" class="btn btn-primary ladda-button" data-style="expand-right"><span class="ladda-label"><i class="fa fa-upload"></i> Save Recording</span></button>
    </div>
  </div>
</div>

<br />

<%= link_to '<i class="fa fa-caret-left"></i> Close'.html_safe, '_self', id: 'back' %>

<!-- Modal -->
<div class="modal fade" id="updated-alert" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Success</h4>
      </div>
      <div class="modal-body">
        Your recording has been saved!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline btn-success" data-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>

<button id="show-modal" data-toggle="modal" data-target="#updated-alert"></button>
<!-- ./Modal -->
