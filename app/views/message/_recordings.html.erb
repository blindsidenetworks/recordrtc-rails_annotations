<% if @recordings.empty? %>
  There's nothing here! <%= link_to 'Click here', new_recordrtc_path, target: '_blank' %> to add a new recording.
<% end %>

<% unless @recordings.empty? %>
  <table id="recordings-table" class="table table-striped table-bordered dataTable no-footer responsive nowrap" width="100%" cellspacing="0">
    <thead>
      <tr>
        <th>Title</th>
        <th>Uploaded</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @recordings.each do |rec| %>
        <tr>
          <td><%= link_to rec.title, recordrtc_path(rec), target: '_blank' %></td>
          <td><%= rec.created_at.strftime("%A, %d %b %Y @ %H:%M") %></td>
          <td class="text-right">
            <div class="btn-group">
              <%= link_to '<i class="fa fa-pencil-square-o"></i> Edit'.html_safe, edit_recordrtc_path(rec), class: 'btn btn-default btn-xs', method: :get, target: '_blank' %>
              <%= link_to '<i class="fa fa-trash-o"></i> Delete'.html_safe, api_recording_path(rec), class: 'btn btn-outline btn-danger btn-xs', method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
