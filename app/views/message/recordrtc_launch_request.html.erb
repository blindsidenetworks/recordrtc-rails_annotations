<% content_for :page_header do %>
  <% if @message.lti_version == 'LTI-2p0' %>
    <%= @message.custom_lis_person_name_full %>
  <% elsif @message.lti_version == 'LTI-1p0' %>
    <%= @message.lis_person_name_full %>
  <% end %>
<% end %>

<% content_for :panel_heading do %>
  <strong>Recordings</strong>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div id="browser-version-alert" class="alert alert-warning alert-dismissable">
        <button id="close-alert" type="button" class="close" data-dismiss="alert">&times;</button>
        <span class="alert-link">Browser Compatibility Warning</span>. For best results, please consider switching to Firefox &ge; 29, Chrome &ge; 49, or Opera &ge; 36.
    </div>
  </div>
</div>

