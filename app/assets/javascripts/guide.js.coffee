$(document).on 'turbolinks:load', ->
  #/////////////////////////////////////////////////////////////////////////////
  # JavaScript for CONTROLLER: guide, global
  #/////////////////////////////////////////////////////////////////////////////

  if $('body').hasClass 'guide'
    #///////////////////////////////////////////////////////////////////////////
    # JavaScript for CONTROLLER: guide, ACTION: home
    #///////////////////////////////////////////////////////////////////////////

    if $('body').hasClass 'home'
      #//////////////////
      # Setup
      #//////////////////

      regUrl = $('input')


      #//////////////////
      # Event watchers
      #//////////////////

      # Select contents of field when clicked
      regUrl.click ->
        regUrl.select()
        return
  return
